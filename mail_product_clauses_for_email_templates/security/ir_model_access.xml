<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- all users can view the clauses, only sales managers can edit them -->
    <record id="access_email_product_clause_user" model="ir.model.access">
        <field name="name">access_email_product_clause_user</field>
        <field name="model_id" ref="model_email_product_clause" />
        <field name="group_id" ref="base.group_user" />
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="0" />
        <field name="perm_create" eval="0" />
        <field name="perm_unlink" eval="0" />
    </record>

    <record id="access_email_product_clause_manager" model="ir.model.access">
        <field name="name">access_email_product_clause_manager</field>
        <field name="model_id" ref="model_email_product_clause" />
        <field name="group_id" ref="sales_team.group_sale_manager" />
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_unlink" eval="1" />
    </record>
</odoo>
