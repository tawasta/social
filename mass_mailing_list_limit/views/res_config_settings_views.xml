<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_mailing_list_limit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.mailing.list.limit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mass_mailing.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='allow_blacklist_setting_container']" position="after">
                <div class="col-lg-6 o_setting_box col-12" name="default_mailing_list_limit_setting_container">
                    <div class="o_setting_right_pane">
                        <label for="default_mailing_list_limit"/>
                        <div class="text-muted">
                            Default maximum contacts for mailing lists
                        </div>
                        <field name="default_mailing_list_limit"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
