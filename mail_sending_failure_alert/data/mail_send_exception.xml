<odoo>
    <record id="email_template_send_exception" model="mail.template">
        <field name="name">Mail sending exception"</field>
        <field name="email_from">${object.company_id.email}</field>
        <field name="subject">Sending mail failed</field>
        <field name="email_to" />
        <field name="email_cc" />
        <field name="partner_to" />
        <field name="model_id" ref="sale.model_sale_order" />
        <field name="auto_delete" eval="False" />
        <field name="lang">en_US</field>
        <field name="body_html">
Sending message '${object.subject}' to xx failed: ${object.failure_reason}
yyy
        </field>
    </record>

</odoo>
